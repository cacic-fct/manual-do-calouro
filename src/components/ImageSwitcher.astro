---
import type { ImageMetadata } from "astro";
const { lightSrc, darkSrc, ...imageAttrs } = Astro.props;
import { Image } from "astro:assets";

const images = import.meta.glob<{ default: ImageMetadata }>("/src/assets/*/*.{jpeg,jpg,png,gif,svg}");

if (!images[lightSrc])
  throw new Error(`"${lightSrc}" does not exist in glob: "/src/assets/*/*.{jpeg,jpg,png,gif,svg}"`);

if (!images[darkSrc]) throw new Error(`"${darkSrc}" does not exist in glob: "/src/assets/*/*.{jpeg,jpg,png,gif,svg}"`);
---

{
  darkSrc && (
    <Image
      src={images[darkSrc]!()}
      {...imageAttrs}
      class:list={{ "light:sl-hidden": Boolean(lightSrc) }}
      loading="lazy"
    />
  )
}
{lightSrc && <Image src={images[lightSrc]!()} {...imageAttrs} class="dark:sl-hidden" loading="lazy" />}
